<div class="text-success">
 <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |b| %>

  <h4>Title</h4>
  <%= b.text_field :title %>
  
  <h4>Body</h4>
  <%= b.text_area :body %>
  
  <p><%= b.submit 'Update Book' %></p>
  
  <div class="show-another">
   <span><%= link_to "show" ,book_path(@book.id) %></span>
   <span>|</span>
   <span><%= link_to "back" ,new_book_path %></span>
  </div>
  
<% end %>