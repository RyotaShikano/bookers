<div class="text-success">
 <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Books</h1>

<table>
<tr class="index">
 <th class="index-title">Title</th>
 <th class="index-body">Body</th>
</tr>
</table>
<% @books.each do |book| %>
<table>
<tr class="index">
 <th class="index-title"><%=book.title %></th> 
 <th class="index-body"><%=book.body %></th>
 <th class="index-link"><%=link_to "Show", book_path(book.id) %></th>
 <th class="index-link"><%= link_to "Edit" ,edit_book_path(book.id) %></th>
 <th class="index-link"><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></th>
</tr>
</table>


<% end %>


<%= form_with model: @book,url:'/books' ,method: :post do |f| %>
<h1>New Book</h1>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>body</h4>
 <%= f.text_area :body %>

 <p><%= f.submit 'Create Book' %></p>

<% end %>