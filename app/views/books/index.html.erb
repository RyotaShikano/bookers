<div class="text-success">
 <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Books</h1>

<div class="new">
 <div class="new-title">Title</div>
 <div class="new-body">Body</div>
</div>
<% @books.each do |book| %>

<div class="new">
 <div class="new-title"><%=book.title %></div> 
 <div class="new-body"><%=book.body %></div>
 <div class="new-link">
  <span><%=link_to "show", book_path(book.id) %></span>
  <span><%= link_to "edit" ,edit_book_path(book.id) %></span>
  <span><%= link_to "destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure？" %></span>
 </div>
</div>


<% end %>


<%= form_with model: @book,url:'/books' ,method: :post do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>body</h4>
 <%= f.text_area :body %>

 <p><%= f.submit 'create book' %></p>

<% end %>